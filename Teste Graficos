import matplotlib.pyplot as plt

valoresx = [1,2,3,4]
valoresy = [1,4,2,3]

figura = plt.figure(figsize=(20,3)) #Criando uma figura, para armazenar mais gráficos
figura.suptitle('Título Geral')

figura.add_subplot(131) #Posição do gráfico, 1- uma linha, 3- três colunas, 1- posição do gráfico(no caso, gráfico 1)
plt.plot(valoresx, valoresy, label='Um dado qualquer') #Criação do gráfico
plt.legend()
plt.title('Gráfico 1')

figura.add_subplot(132)
plt.scatter(valoresx, valoresy)
plt.title('Gráfico 2')

figura.add_subplot(133)
plt.bar(valoresx, valoresy)
plt.title('Gráfico 3')

plt.show(figura)

